<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text6"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="375dp"
            android:layout_height="414dp"
            card_view:cardCornerRadius="4dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="204dp"
                android:id="@+id/imageButton"
                android:src="@drawable/monument"
                android:contentDescription="@string/image_card_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text5"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="359dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Text1"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text2"
                android:id="@+id/textView5"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text3"
                android:id="@+id/textView6"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text4"
                android:id="@+id/textView4"
                android:layout_gravity="bottom" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text7"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="380dp"
            android:layout_height="414dp"
            card_view:cardCornerRadius="4dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="204dp"
                android:id="@+id/imageButton1"
                android:src="@drawable/monument"
                android:contentDescription="@string/image_card_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text12"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="359dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text8"
                android:id="@+id/textView11"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text9"
                android:id="@+id/textView12"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text10"
                android:id="@+id/textView13"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text11"
                android:id="@+id/textView14"
                android:layout_gravity="bottom" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>